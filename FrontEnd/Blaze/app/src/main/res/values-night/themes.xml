<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal en modo oscuro -->
    <style name="Dark.Theme.Blaze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_variant</item>
        <item name="colorOnPrimary">@color/white_opacity</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_opacity</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/black_opacity</item>
        <item name="colorOnBackground">@color/white_opacity</item>

        <!-- Superficies (CardView, Dialogs, etc.) -->
        <item name="colorSurface">@color/black_opacity</item>
        <item name="colorOnSurface">@color/white_opacity</item>
    </style>
</resources>
