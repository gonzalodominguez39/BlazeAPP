<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal -->
    <style name="Base.Theme.Blaze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_variant</item>
        <item name="colorOnPrimary">@color/white_opacity</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_opacity</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/black_opacity</item>
        <item name="colorOnBackground">@color/black_opacity</item>

        <!-- Superficies (CardView, Dialogs, etc.) -->
        <item name="colorSurface">@color/white_opacity</item>
        <item name="colorOnSurface">@color/black_opacity</item>
    </style>
    <style name="Theme.Blaze.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Hace transparente la barra de estado -->
        <item name="android:navigationBarColor">@android:color/transparent</item> <!-- Hace transparente la barra de navegaciÃ³n -->
        <item name="android:windowBackground">@color/black_opacity</item> <!-- Fondo oscuro con opacidad -->
    </style>
</resources>